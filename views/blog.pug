extends layout

include mixins/_commentForm
include mixins/_comment

block layout-content
    .blog-container
        span.date=`${blog.created.getMonth() + 1}.${blog.created.getDate()}`
        if blog.photo
            .blog-image
                img(src=`/blog-images/${blog.photo}`)
        h2.blog-title=blog.title
        h3.blog-headline=blog.headline
        if blog.owner
            h4.author Written by #{blog.owner.firstName}

        .blog-body=blog.body

        .comments
            h4.comment__header Comments
            
            if blog.comments
                .comments__container
                    each comment in blog.comments
                        +comment(comment)
            if user
                +commentForm(blog, 'blog')

                if user.isAdmin
                    a(href=`/updates/${blog._id}/edit`) Edit Post